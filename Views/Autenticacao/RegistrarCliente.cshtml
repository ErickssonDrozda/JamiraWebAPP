@model FEL_JAMIRA_WEB_APP.Models.Areas.Autenticacao.CadastroCliente

@{
    ViewBag.Title = "Cadastro de Cliente";
    Layout = null;

    SelectList Cidade = ViewBag.Cidade as SelectList;
    SelectList Estado = ViewBag.Estado as SelectList;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="shortcut icon" href="~/Icons/map-marked-alt-solid.ico" type="image/x-icon" />
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="bg-gradient-primary">

    <div class="container">
        @using (Html.BeginForm("RegistrarCliente", "Autenticacao", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="row">
                        <div class="col-lg-7">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">Create an Custommer Account!</h1>
                                </div>
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <form class="user">
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @placeholder = "FullName", @class = "form-control form-control-user" } })
                                        @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-sm-6">
                                        @Html.EditorFor(model => model.Nickname, new { htmlAttributes = new { @placeholder = "Nickname", @class = "form-control form-control-user" } })
                                        @Html.ValidationMessageFor(model => model.Nickname, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @placeholder = "Email", @class = "form-control form-control-user" } })
                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        @Html.EditorFor(model => model.Senha, "Password", new { htmlAttributes = new { @placeholder = "Password", @class = "form-control form-control-user" } })
                                        @Html.ValidationMessageFor(model => model.Senha, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-sm-6">
                                        @Html.EditorFor(model => model.ConfirmaSenha, "Password", new { htmlAttributes = new { @placeholder = "Repeat Password", @class = "form-control form-control-user" } })
                                        @Html.ValidationMessageFor(model => model.ConfirmaSenha, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        @Html.EditorFor(model => model.CPF, new { htmlAttributes = new { @placeholder = "Identification Number (Anything)", @class = "form-control form-control-user" } })
                                        @Html.ValidationMessageFor(model => model.CPF, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-sm-6">
                                        @Html.EditorFor(model => model.RG, new { htmlAttributes = new { @placeholder = "Registration Number (Anything)", @class = "form-control form-control-user" } })
                                        @Html.ValidationMessageFor(model => model.RG, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        @Html.EditorFor(model => model.Nascimento, "{0:dd-MM-yyyy}", new { htmlAttributes = new { @placeholder = "Birthday (dd-mm-aaaa)", @class = "form-control form-control-user" } })
                                        @Html.ValidationMessageFor(model => model.Nascimento, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-sm-6">
                                        @Html.EditorFor(model => model.CEP, new { htmlAttributes = new { @Id = "IdCep", @placeholder = "CEP(ZIP Code)", @class = "form-control form-control-user" } })
                                        @Html.ValidationMessageFor(model => model.CEP, "", new { @class = "text-danger" })
                                        <div id="aguardeCEP" style="width: 100%; text-align: center; display:none;">Searching results...</div>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        @Html.EditorFor(model => model.Rua, new { htmlAttributes = new { @Id = "Rua", @placeholder = "Street", @class = "form-control form-control-user" } })
                                        @Html.ValidationMessageFor(model => model.Rua, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-sm-6">
                                        @Html.EditorFor(model => model.Numero, new { htmlAttributes = new { @placeholder = "Street number", @class = "form-control form-control-user" } })
                                        @Html.ValidationMessageFor(model => model.Numero, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        @Html.EditorFor(model => model.Bairro, new { htmlAttributes = new { @Id = "Bairro", @placeholder = "Neighborhood", @class = "form-control form-control-user" } })
                                        @Html.ValidationMessageFor(model => model.Bairro, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-sm-6">
                                        @Html.EditorFor(model => model.Complemento, new { htmlAttributes = new { @Id = "Complemento", @placeholder = "Complement", @class = "form-control form-control-user" } })
                                        @Html.ValidationMessageFor(model => model.Complemento, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        @Html.DropDownListFor(model => model.IdCidade, Cidade != null ? Cidade.Items as List<SelectListItem> : new List<SelectListItem>(), new { @placeholder = "City", @class = "form-control form-control-user" })
                                        @Html.ValidationMessageFor(model => model.IdCidade, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-sm-6">
                                        @Html.DropDownListFor(model => model.IdEstado, Estado != null ? Estado.Items as List<SelectListItem> : new List<SelectListItem>(), new { @placeholder = "Province", @class = "form-control form-control-user" })
                                        @Html.ValidationMessageFor(model => model.IdEstado, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <span>Please, insert your profile icon:</span>
                                    @Html.TextBoxFor(m => m.Arquivo, new { type = "file" })
                                    <br />
                                    @Html.ValidationMessageFor(m => m.Arquivo, "", new { @class = "text-danger" })
                                    <hr />
                                </div>

                                <input class="btn btn-primary btn-user btn-block" type="submit" value="Register Account" />
                            </form>
                                <hr>
                                <div class="text-center">
                                    @Html.ActionLink("Already have an account? Login!", "Login", "Autenticacao", new { @class = "small" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

        <div id="particles"></div>

        <footer class="center" style="margin-top:3%;">
            <p>&copy; @DateTime.Now.Year - JAMIRA - All rights reserved.</p>
        </footer>
    </div>
   
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @Scripts.Render("~/bundles/jqueryval")
        @Scripts.Render("~/bundles/loginJs")
        @Scripts.Render("~/bundles/register")
        @Styles.Render("~/Content/loginCss")
    </body>
</html>